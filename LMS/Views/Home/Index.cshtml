@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" href="~/css/landingPagesStyles.css" asp-append-version="true" />
</head>

<body>
    <div class="card mb-2" id="landing-container">
        <div class="row g-0">
            <div class="col-lg-7 col-md-7" id="large-screen-img1" style="display:none;">
                <img src="~/images/stack-of-books.png" class="landing-img img-fluid rounded-start" alt="stack of books">
            </div>
            <div class="col-lg-5 col-md-5">
                <div class="card-body" id="landing-body">
                    <h1 class="landing-heading text-white">Master Dewey,</h1>
                    <h1 class="landing-heading text-white">the Fun Way!</h1> 
                    <a asp-controller="Home" asp-action="Index">
                        <input type="submit" value="Start" class="landing-btn" style="width:12.5rem;" />
                    </a>
                </div>
            </div>

            <div class="col-lg-7 col-md-7" id="large-screen-img2">
                <img src="~/images/stack-of-books.png" class="landing-img img-fluid rounded-start" alt="stack of books">
            </div>
        </div>
    </div>
</body>